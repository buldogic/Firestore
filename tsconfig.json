
{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es2020",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src"],
  "exclude": ["node_modules"],
  "baseUrl": "src",
  "paths": {
    "authorization": ["authorization/*"],
    "pages": ["pages/*"],
    "routes": ["routes/*"],
    "components": ["components/*"],
    "config": ["config/*"],
    "styles": ["styles/*"],
    "utils": ["utils"],
    "store": ["store/*"],
    "hooks": ["hooks/*"]
  },
}
